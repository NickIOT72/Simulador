#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScreenManagement>:
    transition: FadeTransition()
    MainScreen:
        id: main


<MainScreen>:
    name: 'mainpage'
    size_hint: (1, 1)
    FloatLayout:
        id: main_layout
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        #Bloque Azul de Llamadas de Cabina
        BloqueAzulLlamadas:
            pos_hint: {'x': 0.05, 'y': 0.83}
        #Bloque Azul de Panel de Ascensor Cabina
        BloqueAzulPanel:
            pos_hint: {'x': 0.03, 'y': 0.1}

        #Bloque Puerta Izquierda Ascensor
        BloqueElevador:
            pos_hint: {'x': 0.35, 'y': 0.83}
        #Bloque Puerta Derecha Ascensor
        BloqueElevador:
            pos_hint: {'x': 0.505, 'y': 0.83}
        
        #Bloque Azul Fallas Ascensor
        BloqueAzulFallas:
            pos_hint: {'x': 0.35, 'y': 0.4}
            #Bloque Blanco fallas ascensor
            BloqueBlancoFallas:
                pos_hint: {'x': 0.025, 'y': 0.015}

<BloqueBlancoFallas@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.95,0.97
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<BloqueAzulFallas@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.32,0.32
    canvas:
        Color:
            rgba: 0, 0.5, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<BloqueElevador@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.145,0.08
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

<BloqueAzulPanel@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.24,0.65
    canvas:
        Color:
            rgba: 0, 0.5, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BloqueBlancoPanel:
        pos_hint: {'x': 0.025, 'y': 0.015}

<BloqueBlancoPanel@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.95,0.97
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<BloqueAzulLlamadas@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.2,0.12
    canvas:
        Color:
            rgba: 0, 0.5, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BloqueBlancoLlamada:
        pos_hint: {'x': 0.025, 'y': 0.025}

<BloqueBlancoLlamada@FloatLayout>:
    orientation: 'vertical'
    size_hint: 0.95,0.95
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MensajeLLamada1:
        pos_hint: {'x': 0, 'y': 0.40}
    MensajeLLamada2:
        pos_hint: {'x': 0, 'y': -0.20}

<MensajeLLamada1@Label>:
    id: LlMsg1
    text: 'Llamadas '
    size_hint: 0.96,0.85
    font_size: 25
    color: (0,0.5,1,1)
    
<MensajeLLamada2@Label>:
    id: LlMsg2
    text: 'de cabina '
    size_hint: 0.96,0.85
    font_size: 25
    color: (0,0.5,1,1)