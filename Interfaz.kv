#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScreenManagement>:
    transition: FadeTransition()
    MainScreen:
        id: main


<MainScreen>:
    name: 'mainpage'
    size_hint: (1, 1)
    FloatLayout:
        id: main_layout
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        #Bloque Azul de Llamadas de Cabina
        FloatLayout:
            orientation: 'vertical'
            size_hint: 0.2,0.12
            pos_hint: {'x': 0.05, 'y': 0.83}
            canvas:
                Color:
                    rgba: 0, 0.5, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            #Bloque Blanco de llamadas de cabina
            FloatLayout:
                orientation: 'vertical'
                size_hint: 0.95,0.95
                pos_hint: {'x': 0.025, 'y': 0.025}
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                #Mensaje "Llamadas"
                Label:
                    id: LlMsg
                    text: 'Llamadas '
                    size_hint: 0.96,0.85
                    pos_hint: {'x': 0, 'y': 0.40}
                    font_size: 25
                    color: (0,0.5,1,1)
                #Mensaje "de Cabina"
                Label:
                    id: LlMsg
                    text: 'de cabina '
                    size_hint: 0.96,0.85
                    pos_hint: {'x': 0, 'y': -0.20}
                    font_size: 25
                    color: (0,0.5,1,1)
        #Bloque Azul de Panel de Ascensor Cabina
        FloatLayout:
            orientation: 'vertical'
            size_hint: 0.24,0.65
            pos_hint: {'x': 0.03, 'y': 0.1}
            canvas:
                Color:
                    rgba: 0, 0.5, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            #Bloque Blanco de Panel de Ascensor Cabina
            FloatLayout:
                orientation: 'vertical'
                size_hint: 0.95,0.97
                pos_hint: {'x': 0.025, 'y': 0.015}
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
        #Bloque Puerta Izquierda Ascensor
        FloatLayout:
            orientation: 'vertical'
            size_hint: 0.145,0.08
            pos_hint: {'x': 0.35, 'y': 0.83}
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        #Bloque Puerta Derecha Ascensor
        FloatLayout:
            orientation: 'vertical'
            size_hint: 0.145,0.08
            pos_hint: {'x': 0.505, 'y': 0.83}
            canvas:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        #Bloque Azul Fallas Ascensor
        FloatLayout:
            orientation: 'vertical'
            size_hint: 0.32,0.32
            pos_hint: {'x': 0.35, 'y': 0.4}
            canvas:
                Color:
                    rgba: 0, 0.5, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            #Bloque Blanco fallas ascensor
            FloatLayout:
                orientation: 'vertical'
                size_hint: 0.95,0.97
                pos_hint: {'x': 0.025, 'y': 0.015}
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size